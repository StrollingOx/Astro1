<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/fc_item_cardview"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <ImageView
            android:id="@+id/pointer_city"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_item" />

        <TextView
            android:id="@+id/fc_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/fc_item_delete_city"
            android:layout_marginStart="1dp"

            android:layout_marginTop="7dp"
            android:layout_toEndOf="@+id/pointer_city"
            android:text="CITY NAME"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/fc_item_delete_city"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_delete" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fc_item_name"
            android:layout_alignBottom="@+id/fc_item_delete_city"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="-5dp"
            android:layout_toEndOf="@+id/pointer_city"
            android:text="-- -- -- --" />
    </RelativeLayout>


</android.support.v7.widget.CardView>
