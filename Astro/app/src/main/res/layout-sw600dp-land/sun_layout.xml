<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- _______________ SUN _______________ -->

    <TextView
        android:id="@+id/SUN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"

        android:text="â€” SUNâ˜€â€”"
        android:textColor="#FFD429"
        android:textSize="60sp" />

    <!-- _______________ CURRENT TIME, SUNSET, TWILIGHT_______________ -->

    <!-- +++++ CURRENT TIME +++++ -->
    <TextView
        android:id="@+id/sun_CURRENT_TIME"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/SUN"

        android:text="â€” Current Time â€”"
        android:textColor="#0009B3"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/sun_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/sun_CURRENT_TIME"

        android:text="@string/initial_value"
        android:textColor="#2933FF"
        android:textSize="20sp" />

    <!-- +++++ DUSK +++++ -->
    <TextView
        android:id="@+id/sun_DUSK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        android:layout_below="@+id/sun_CURRENT_TIME"

        android:text="â€” Dusk"
        android:textColor="#0009B3"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/sun_dusk_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:layout_below="@+id/sun_DUSK"

        android:text="@string/initial_value"
        android:textColor="#2933FF"
        android:textSize="20sp" />

    <!-- +++++ TWILIGHT +++++ -->
    <TextView
        android:id="@+id/sun_TWILIGHT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="40dp"
        android:layout_below="@+id/sun_CURRENT_TIME"

        android:text="Twilight â€”"
        android:textColor="#0009B3"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/sun_twilight_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="50dp"
        android:layout_below="@+id/sun_TWILIGHT"

        android:text="@string/initial_value"
        android:textAlignment="textEnd"
        android:textColor="#2933FF"
        android:textSize="20sp" />


    <!-- _______________ GEOGRAPHICAL COORDINATES _______________ -->

    <TextView
        android:id="@+id/sun_GEOGRAPHICAL_COORDINATES"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/sun_CURRENT_TIME"
        android:layout_marginTop="100dp"

        android:text="â€” Geographical coordinates â€”"
        android:textSize="30sp"  />

    <!-- +++++ LATITUDE +++++ -->
    <TextView
        android:id="@+id/sun_LATITUDE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginStart="50dp"
        android:paddingBottom="5dp"
        android:layout_below="@+id/sun_GEOGRAPHICAL_COORDINATES"

        android:text="Latitude"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/sun_latitude"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sun_LATITUDE"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"

        android:text="@string/initial_value"
        android:textColor="#000000"
        android:textSize="25sp" />

    <!-- +++++ LONGITUDE +++++ -->
    <TextView
        android:id="@+id/sun_LONGITUDE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:paddingBottom="5dp"
        android:layout_below="@+id/sun_GEOGRAPHICAL_COORDINATES"

        android:text="Longitude"
        android:textSize="30sp" />/>

    <TextView
        android:id="@+id/sun_longitude"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sun_LATITUDE"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"

        android:text="@string/initial_value"
        android:textAlignment="textEnd"
        android:textColor="#000000"
        android:textSize="25sp" />

    <!-- _______________ BUTTON _______________ -->

    <!-- _______________ SUNSET AND SUNRISE _______________ -->

    <TextView
        android:id="@+id/sun_AT_TIME"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/sun_SUNRISE"
        android:layout_marginTop="50dp"

        android:text="ðŸ‘ˆ time ðŸ‘‰"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/sun_at_azimuth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/sun_AT_TIME"
        android:layout_marginTop="25dp"

        android:textAlignment="center"
        android:text="ðŸ‘ˆ   azimuth   ðŸ‘‰"
        android:textSize="20sp"/>

    <!-- +++++ SUNRISE +++++ -->
    <TextView
        android:id="@+id/sun_SUNRISE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sun_GEOGRAPHICAL_COORDINATES"
        android:layout_marginTop="120dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"

        android:textSize="40sp"
        android:text="Sunrise" />

    <TextView
        android:id="@+id/sun_sunrise_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sun_SUNRISE"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="50dp"

        android:text="@string/initial_value"
        android:textColor="#2933FF"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/sun_sunrise_azimuth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_below="@id/sun_sunrise_time"
        android:layout_marginTop="30dp"

        android:text="@string/initial_value"
        android:textColor="#29AAFF"
        android:textSize="20sp"/>

    <!-- +++++ SUNSET +++++ -->
    <TextView
        android:id="@+id/sun_SUNSET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sun_GEOGRAPHICAL_COORDINATES"
        android:layout_marginTop="120dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="40dp"

        android:textSize="40sp"
        android:text="Sunset" />

    <TextView
        android:id="@+id/sun_sunset_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sun_SUNSET"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="50dp"

        android:text="@string/initial_value"
        android:textAlignment="textEnd"
        android:textColor="#2933FF"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/sun_sunset_azimuth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:layout_below="@+id/sun_sunset_time"
        android:layout_marginTop="30dp"

        android:text="@string/initial_value"
        android:textColor="#29AAFF"
        android:textSize="20sp"/>


</RelativeLayout>